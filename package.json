{
  "name": "mcp-wcag-accessibility",
  "version": "3.0.1",
  "description": "MCP server for WCAG accessibility analysis and code refactoring",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "install-mcp": "node setup-claude.cjs",
    "verify": "node verify.cjs",
    "diagnose": "node diagnose.cjs",
    "setup": "npm install && npm run build && npm run install-mcp",
    "clean": "rm -rf dist",
    "postinstall": "echo 'Installation complete! Run npm run build to compile'"
  },
  "keywords": [
    "mcp",
    "wcag",
    "accessibility",
    "a11y",
    "claude",
    "refactoring",
    "html",
    "react"
  ],
  "author": "Alexander's Studio",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.7.0",
    "axe-core": "^4.8.3",
    "jsdom": "^23.2.0",
    "htmlparser2": "^9.1.0",
    "@babel/parser": "^7.23.6",
    "@babel/traverse": "^7.23.7",
    "@babel/types": "^7.23.6",
    "postcss": "^8.4.33",
    "color": "^4.2.3",
    "cheerio": "^1.0.0-rc.12",
    "prettier": "^3.2.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/jsdom": "^21.1.6",
    "@types/color": "^3.0.6",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "vitest": "^1.2.1",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
